SET(CMAKE_MRPT_HAS_ARUCO 0)

IF(NOT CMAKE_MRPT_HAS_ARUCO)
	IF(PKG_CONFIG_FOUND)
		PKG_CHECK_MODULES(PC_ARUCO ${_QUIET} aruco)
	ENDIF (PKG_CONFIG_FOUND)
	FIND_PATH(ARUCO_INCLUDE_DIR aruco/aruco.h
			HINTS ${PC_ARUCO_INCLUDEDIR} ${PC_ARUCO_INCLUDE_DIRS})
	FIND_LIBRARY(ARUCO_LIBRARY NAMES aruco
				HINTS ${PC_ARUCO_LIBDIR} ${PC_ARUCO_LIBRARY_DIRS})
	INCLUDE(FindPackageHandleStandardArgs)
	FIND_PACKAGE_HANDLE_STANDARD_ARGS(Aruco DEFAULT_MSG ARUCO_LIBRARY ARUCO_INCLUDE_DIR)
	IF(ARUCO_FOUND)
		SET(ARUCO_INCLUDE_DIRS ${ARUCO_INCLUDE_DIR})
		SET(ARUCO_LIBRARIES ${ARUCO_LIBRARY})
		SET(CMAKE_MRPT_HAS_ARUCO 1)
		IF($ENV{VERBOSE})
			MESSAGE(STATUS "ARUCO_LIBRARIES    : ${ARUCO_LIBRARIES}")
			MESSAGE(STATUS "ARUCO_INCLUDE_DIRS : ${ARUCO_INCLUDE_DIRS}")
		ENDIF($ENV{VERBOSE})
	ENDIF(ARUCO_FOUND)
ENDIF(NOT CMAKE_MRPT_HAS_ARUCO)